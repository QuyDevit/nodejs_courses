
<div class="mt-4">
    <div class="row mb-4">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card cart-courses-item">
                <a class="cart__wrapper-img" href="/courses/{{this.slug}}">
                    <button type="button" class="btn-active">Đăng ký học</button>
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}"> 
                </a>
                <div class="card-body">
                    <a class="course-title" href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text course-description">{{this.description}}</p>   
                  
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
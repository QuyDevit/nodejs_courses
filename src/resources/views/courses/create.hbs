<div class="mt-4">
    <h3>Đăng khóa học</h3>

    <form method="post" action="/courses/store">
        <div class="form-group mt-2">
            <label for="namecourse">Tên khóa học</label>
            <input type="text" name="name" class="form-control" id="namecourse" 
                placeholder="Tên khóa học">  
        </div>
        <div class="form-group mt-2">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" name="description" id="description" placeholder="Mô tả">
        </div>
        <div class="form-group mt-2" >
            <label for="videoid">Video Id</label>
            <input type="text" class="form-control" name="videoId" id="videoId" placeholder="Video Id">
        </div>
        <div class="form-group mt-2">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" name="level" id="level" placeholder="Trình độ">
        </div>
        <button type="submit" class="mt-2 btn btn-primary">Lưu</button>
    </form>
</div>